{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "strictBindCallApply": false,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "relayer",
    "composite": true
  },
  "include": [
    "relayer"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "relayer/**/*.test.ts",
    "test/*",
    "examples"
  ],
  "compileOnSave": true
}